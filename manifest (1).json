{
  "id": "/",
  "lang": "en-US",
  "name": "Fruit Tapper",
  "short_name": "FruitTapper",
  "description": "A simple, fun fruit tapping game!",
  "start_url": "./?utm_source=app",
  "scope": "./",
  "scope_extensions": [
    {
      "origin": "https://your-domain.com"
    }
  ],
  "display": "standalone",
  "orientation": "portrait",
  "background_color": "#87CEEB",
  "theme_color": "#87CEEB",
  "icons": [
    {
      "src": "icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/screenshot-1.png",
      "sizes": "512x256",
      "type": "image/png"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.your-domain.fruittapper",
      "id": "com.your-domain.fruittapper"
    }
  ],
  "prefer_related_applications": false,
  "categories": [
    "game"
  ],
  "dir": "ltr",
  "iarc_rating_id": "TBD",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "gcm_sender_id": "103953800507",
  "periodic_background_sync": {
    "min_interval": 86400
  },
  "file_handlers": [
    {
      "action": "/?open_file=%s",
      "accept": {
        "application/json": [
          ".json"
        ]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+fruit",
      "url": "/?fruit=%s"
    }
  ],
  "shortcuts": [
    {
      "name": "Play Game",
      "short_name": "Play",
      "description": "Start playing Fruit Tapper",
      "url": "/?action=play",
      "icons": [
        {
          "src": "icons/icon-192.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Upgrades",
      "short_name": "Upg",
      "description": "Visit Upgrades",
      "url": "/?tab=upgrades",
      "icons": [
        {
          "src": "icons/icon-192.png",
          "sizes": "192x192"
        }
      ]
    }
  ]
}